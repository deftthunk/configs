conky.config = {
  use_spacer = 'left',
  pad_percents = 3,
  background = false,
  double_buffer = true,
  font = 'DejaVu Sans Mono:size=8',
  use_xft = true,
  alignment = 'top_right',
  gap_x = 10,
  gap_y = 35,
  own_window_argb_visual = true,
  own_window_argb_value = 0,
  own_window_type = 'normal',
  own_window_hints = 'undecorated,below,skip_taskbar,skip_pager,sticky',
  own_window = true,
  update_interval = 2.0,
  maximum_width = 200,
}

conky.text = [[
${color orange}Hostname: ${color}${nodename}
${color orange}Kernel:   ${color}${sysname} ${kernel}
${color orange}Uptime:   ${color}${uptime}
${color orange}Temp:     ${color}${exec cat /sys/class/hwmon/hwmon1/temp2_input | cut -c-2}C
${exec /usr/lib/update-notifier/apt-check --human-readable}
${hr}
${color orange}CPU:${color} ${freq_g} GHz
${color orange}01:${color} ${cpu cpu1}% ${cpubar cpu1}
${color orange}02:${color} ${cpu cpu2}% ${cpubar cpu2}
${color orange}03:${color} ${cpu cpu3}% ${cpubar cpu3}
${color orange}04:${color} ${cpu cpu4}% ${cpubar cpu4}
${color orange}05:${color} ${cpu cpu5}% ${cpubar cpu5}
${color orange}06:${color} ${cpu cpu6}% ${cpubar cpu6}
${color orange}07:${color} ${cpu cpu7}% ${cpubar cpu7}
${color orange}08:${color} ${cpu cpu8}% ${cpubar cpu8}
${cpugraph}
${color orange}Name                CPU%   MEM%
${color lightgrey} ${top name 1} ${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top cpu 3} ${top mem 3}
${color lightgrey} ${top name 4} ${top cpu 4} ${top mem 4}
${color orange}Load average: ${color}${loadavg}
${color orange}Processes: ${color}${processes} 
${color orange}Running:${color} ${running_processes}
${hr}
${color orange}RAM:  ${color}${mem}/${memmax}
${memperc}% ${membar 4}
#${color orange}Swap: ${color}${swap}/${swapmax}
#${swapperc}% ${swapbar 4}
${memgraph}
${hr}
${color orange}/    ${color}${fs_used /}/${fs_size /} ${fs_bar 6 /}
${color orange}nfs ${color}${fs_used /home/vlad/nfs}/${fs_size /home/vlad/nfs} ${fs_bar 6 /home/vlad/nfs}
${color orange}nvme ${color}${fs_used /home/vlad/local/nvme}/${fs_size /home/vlad/local/nvme} ${fs_bar 6 /home/vlad/local/nvme}
${color orange}mount ${color}${fs_used /home/vlad/mount}/${fs_size /home/vlad/mount} ${fs_bar 6 /home/vlad/mount}
${hr}
enp0s31f6
${color orange}IP:   ${color}${addr enp0s31f6}
${color orange}Up:   ${color}${upspeed enp0s31f6}
${color orange}Down: ${color}${downspeed enp0s31f6}
${downspeedgraph enp0s31f6 25,90 000000 ff0000} ${alignr}${upspeedgraph enp0s31f6 25,90 000000 00ff00}
docker0
${color orange}IP:   ${color}${addr docker0}
${color orange}Up:   ${color}${upspeed docker0}
${color orange}Down: ${color}${downspeed docker0}
${downspeedgraph docker0 25,90 000000 ff0000} ${alignr}${upspeedgraph docker0 25,90 000000 00ff00}
docker18
${color orange}IP:   ${color}${addr br-539dda2d3ee1}
${color orange}Up:   ${color}${upspeed br-539dda2d3ee1}
${color orange}Down: ${color}${downspeed br-539dda2d3ee1}
${downspeedgraph br-539dda2d3ee1 25,90 000000 ff0000} ${alignr}${upspeedgraph br-539dda2d3ee1 25,90 000000 00ff00}
${if_existing /sys/class/net/enp2s0/operstate up}
enp2s0
${color orange}IP:   ${color}${addr enp2s0}
${color orange}Up:   ${color}${upspeed enp2s0}
${color orange}Down: ${color}${downspeed enp2s0}
${downspeedgraph enp2s0 25,100 000000 ff0000} ${alignr}${upspeedgraph enp2s0 25,100 000000 00ff00} ${endif}
${if_existing /sys/class/net/virbr1/operstate up}
virbr1
${color orange}IP:   ${color}${addr virbr1}
${color orange}Up:   ${color}${upspeed virbr1}
${color orange}Down: ${color}${downspeed virbr1}
${downspeedgraph virbr1 25,100 000000 ff0000} ${alignr}${upspeedgraph virbr1 25,100 000000 00ff00} ${endif}
${if_existing /sys/class/net/vmnet8/operstate up}
vmnet8
${color orange}IP:   ${color}${addr vmnet8}
${color orange}Up:   ${color}${upspeed vmnet8}
${color orange}Down: ${color}${downspeed vmnet8}
${downspeedgraph vmnet8 15,20 000000 ff0000} ${alignr}${upspeedgraph vmnet8 10,10 000000 00ff00} ${endif}
]]
